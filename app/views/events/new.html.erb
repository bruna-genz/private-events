<div class="new">
    <%= render 'static_pages/partials/navbar' %>
    <%= render 'events/sub_navbar'%>
    <div class="sign-in-form">
        <div class="event-form-image"></div>
            <h1>Create a new event</h1>
            
            <%= form_for @event do | t | %>
                <%= render 'static_pages/partials/events_errors' %>

                <%= t.label :name %>
                <%= t.text_field(:name, placeholder: "EventÂ´s name") %>

                <%= t.label :date %>
                <%= t.date_field(:date) %>

                <%= t.label :location %>
                <%= t.text_field :location, placeholder: "e.g BogotÃ¡" %>

                <%= t.label :tag %>
                <%= t.select(:tag, options_for_select([['Anything',1],['Science&tech',2],['Music',3]],3), class: "select-input") %>

                <%= t.label :description %>
                <%= t.text_area :description %>

                <%= t.label :event_picture, "Add a picture to your event:" %>
                <%= t.file_field :event_picture %>

                <%= t.submit "Create event" %>

                <%= t.submit "Create event", id: "top-buttom" %>
            <% end %>
        </div>
    </div>
</div>