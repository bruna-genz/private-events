<h1>Sign up</h1>

<%= form_for @user do |f| %>

    <%= render '../static_pages/partials/errors' %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, "Password confirmation:" %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Sign in with Facebook" %>

    <%= f.submit "Sign in with Google" %>

    <%= f.submit "Create my account" %>

<% end %>
